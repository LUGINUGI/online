<!DOCTYPE html>
<html>
<head>
  <title>Testa Weply</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      padding: 20px;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      flex-direction: column;
    }

    .form-container {
      background-color: #fff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 500px;
      text-align: center;
    }

    .form-container img {
      width: 300px; /* Adjusted to double the original width (150px) */
      margin-bottom: 20px;
    }

    h1 {
      font-size: 24px;
      margin-bottom: 20px;
    }

    input {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      border: 1px solid #ddd;
      border-radius: 4px;
    }

    button {
      width: 100%;
      padding: 12px;
      background-color: #007bff;
      border: none;
      color: white;
      font-size: 16px;
      border-radius: 4px;
      cursor: pointer;
    }

    button:hover {
      background-color: #0056b3;
    }

    .info-bar {
      background-color: #f1c40f;
      padding: 10px;
      margin-top: 20px;
      text-align: center;
      color: white;
      font-weight: bold;
    }

    /* Responsive Design for Mobile */
    @media (max-width: 768px) {
      body {
        padding: 10px;
      }

      .form-container {
        padding: 20px;
        max-width: 100%;
      }

      h1 {
        font-size: 20px;
      }

      input, button {
        padding: 15px;
      }
    }

    /* Styles for the Loading Animation */
    .loading-overlay {
      display: none; /* Hidden by default */
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.6);
      justify-content: center;
      align-items: center;
      z-index: 9999;
    }

    .loading-message {
      background: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      text-align: center;
      font-size: 18px;
    }

    .spinner {
      margin: 15px auto;
      border: 5px solid #f3f3f3; /* Light grey */
      border-top: 5px solid #007bff; /* Blue */
      border-radius: 50%;
      width: 50px;
      height: 50px;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
  </style>
</head>
<body>
  <div class="form-container">
    <img src="https://testaweply.se/weply.png" alt="Weply Logo">
    <h1>Testa Weply</h1>
    <form id="prototype-form" action="/generate-prototype" method="POST">
      <input type="text" id="url" name="url" placeholder="Enter URL" required>
      <input type="text" id="identifier" name="identifier" placeholder="Enter Name (Subpage)" required>
      <button type="submit">Generate Prototype</button>
    </form>
  </div>

  <!-- Loading Animation Overlay -->
  <div id="loading-overlay" class="loading-overlay">
    <div class="loading-message">
      <div class="spinner"></div>
      <p>Generating your page, please wait 5 seconds...</p>
    </div>
  </div>

  <script>
    // JavaScript to show loading animation when form is submitted
    const form = document.getElementById('prototype-form');
    const loadingOverlay = document.getElementById('loading-overlay');

    form.addEventListener('submit', function(event) {
      // Prevent the default form submission so we can show the loading animation first
      loadingOverlay.style.display = 'flex';
    });
  </script>
</body>
</html>
